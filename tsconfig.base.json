{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "@db/*": ["packages/db/src/*"],
      "@utils/*": ["packages/utils/src/*"],
      "@ui/*": ["packages/ui/src/*"]
    }
  },
  "include": ["packages", "apps"],
  "exclude": ["node_modules", "dist"]
}
